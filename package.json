{
  "name": "ev-simtel",
  "version": "1.0.0",
  "description": "This application is a virtual simulation of the NVIS425A Battery Characterstics Training System.",
  "main": "src/main.js",
  "author": "NVIS",
  "license": "ISC",
  "scripts": {
    "start": "electron src/main.js",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "devDependencies": {
    "canvas-gauges": "^2.1.7",
    "chart.js": "^4.4.0",
    "electron": "^27.1.3",
    "electron-builder": "^24.9.1",
    "electron-is-dev": "^2.0.0",
    "electron-packager": "^17.1.2",
    "justgage": "^1.6.1"
  },
  "build": {
    "appId": "com.nvis.ev-simtel",
    "productName": "EV-SIMTEL",
    "win": {
      "icon": "src/shared/img/nvisLogo.ico",
      "target": [
        {
          "target": "msi",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ]
    },
    "mac": {
      "target": "dmg",
      "icon": "src/shared/img/nvisLogo.icns"
    },
    "files": ["**/*", "assets/**/*", "!**/*.map"]
  }   
}
